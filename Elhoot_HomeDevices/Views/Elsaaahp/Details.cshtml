@model Elhoot_HomeDevices.ViewModels.ElsaapViewModelCollectio

@{
    ViewData["Title"] = "Details";
}

<h1>@ViewBag.name</h1>

<div>
    <h4>@ViewBag.price</h4>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>التاريخ</th>
                <th>دفع </th>
                <th>استرجاع</th>
                <th>الحاله</th>
                <th> المبلغ المدفوع</th>
                <th>تاريخ دفع القسط</th>
                <th> مكان دفع القسط</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.elsaahpViewModels != null)
            {
                @foreach (var date in Model.elsaahpViewModels)
                {
                    <tr>

                        <td>@date.Date.ToString()</td>

                        <td>
                            <a asp-action="Madunatprocess1"
                               asp-controller="Elsaaahp"
                               asp-route-DeenID="@date.ElsahpID"
                               asp-route-date="@date.Date.ToString("yyyy-MM-dd")"
                               class="btn btn-sm btn-primary
                  @GetDisabledClass(date.IsSelected)">   دفع السحب  </a>
                        </td>

                        <td>
                            <a asp-action="Madunatprocess2" asp-route-DeenID="@date.ElsahpID"
                               asp-controller="Elsaaahp"
                               asp-route-date="@date.Date.ToString("yyyy-MM-dd")"
                               class="btn btn-sm btn-danger
                     @GetDisabledClass1(date.IsSelected) "> استرجاع السحب</a>
                        </td>

                        <td>@date.Statuse</td>
                        <td>
                            <input class="form-control" type="text"
                                   data-val="true" data-val-required="The DateFree field is required"
                                   name="PayPrice" value="@date.PayPrice"
                                   fdprocessedid="cv2kwb" onchange="updateDate3('@date.ElsahpID', '@date.Date.ToString("yyyy-MM-dd")', this.value)" />
                        </td>
                        <td>
                            <input class="form-control" type="date"
                                   data-val="true" data-val-required="The DateFree field is required"
                                   name="DateFree" value="@date.DateFree?.ToString("yyyy-MM-dd")"
                                   fdprocessedid="cv2kwb" onchange="updateDate1('@date.ElsahpID', '@date.Date.ToString("yyyy-MM-dd")', this.value)" />
                        </td>
                        <td>
                            <input class="form-control" type="text"
                                   data-val="true" data-val-required="The DateFree field is required"
                                   name="Paypalce" value="@date.Paypalce"
                                   fdprocessedid="cv2kwb" onchange="updateDate2('@date.ElsahpID', '@date.Date.ToString("yyyy-MM-dd")', this.value)" />
                        </td>

                        <!-- Other table cells -->



                    </tr>
                    @functions
                    {
                string GetDisabledClass1(bool date1)
                {
                    if (date1 == false)
                    {
                        return "disabled"; // Return the "disabled" class to disable the button

                    }
                    else
                    {
                        return "enable"; // Return an empty string if the button should not be disabled                        }
                    }
                }
                string GetDisabledClass(bool date1)
                {
                    if (date1 == true)
                    {
                        return "disabled"; // Return the "disabled" class to disable the button
                    }
                    else
                    {
                        return "enable"; // Return an empty string if the button should not be disabled                        }
                    }
                }

            }
                }
            }



        </tbody>

    </table>
    <script>


        function updateDate1(DeenID, date, newDate) {
            $.ajax({
                type: 'POST',
                url: '@Url.Action("UpdateDateFree1", "Elsaaahp")',
                data: { DeenID: DeenID, date: date, newDate: newDate },
                success: function (data) {
                    // Update the input field value

                    console.log('Date updated successfully');
                },
                error: function (xhr, status, error) {
                    console.error(error);
                }
            });
        }


        function updateDate2(DeenID, date, newDate) {
            $.ajax({
                type: 'POST',
                url: '@Url.Action("UpdateDateFree2", "Elsaaahp")',
                data: { DeenID: DeenID, date: date, newDate: newDate },
                success: function (data) {
                    // Update the UI if needed
                    console.log('Date updated successfully');
                },
                error: function (xhr, status, error) {
                    console.error(error);
                }
            });
        }

        function updateDate3(DeenID, date, newDate) {
            $.ajax({
                type: 'POST',
                url: '@Url.Action("UpdateDateFree3", "Elsaaahp")',
                data: { DeenID: DeenID, date: date, newDate: newDate },
                success: function (data) {
                    // Update the UI if needed
                    console.log('Date updated successfully');
                },
                error: function (xhr, status, error) {
                    console.error(error);
                }
            });
        }


    </script>
</div>

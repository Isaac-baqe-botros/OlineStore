@model IEnumerable<Elhoot_HomeDevices.Data.Category>

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Elhoot_HomeDevices</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        .category-card {
            background-color:orangered; /* Change the background color as desired */
            color: white;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="text-center mt-4">
            <h1>المخزن</h1>
            <h1>كل المبلغ = @ViewBag.totalprice</h1>
            <p>
                <a asp-action="Creat" class="btn btn-primary">اضافه منتج جديد</a>
            </p>
        </div>

        <div class="row">
            @foreach (var category in Model)
            {
                <div class="col-md-3 mb-4">
                    <div class="card category-card">
                        <div class="card-body">
                            <h5 class="card-title">@category.Name</h5>
                            <a asp-controller="Product" asp-action="Index" asp-route-categoryId="@category.Id" asp-route-CatName="@category.Name"
                               class="btn btn-dark text-white">@category.Name</a>
                        </div>
                    </div>
                </div>
            }
            <p>
                <a asp-action="Delete" class="btn btn-danger">حذف فئة</a>
            </p>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>

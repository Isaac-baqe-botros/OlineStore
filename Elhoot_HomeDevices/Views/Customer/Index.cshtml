<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Elhoot_HomeDevices</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        .card-body{
            background-color: goldenrod; /* Change the background color as desired */
            color: white;
        }

        #showResultBtn {
            margin-top: 10px;
        }

        #result {
            margin-top: 10px;
            border: 1px solid #ccc;
            padding: 10px;
        }
    </style>
</head>
<div class="container mt-3">
    <div class="row mb-3">
        <div class="col-md-6">
            <input id="searchInput" type="text" class="form-control" placeholder="ابحث عن عميل..." />
        </div>

        <div class="container">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <button id="showResultBtn" class="btn btn-primary">اضغط هنا لمعرفه الرقم الكلى</button>
                <a asp-action="Create" class="btn btn-success">اضافه عميل</a>
            </div>
            <div id="result" style="display: none;">
                <h1>كل المبلغ = @ViewBag.result</h1>

            </div>
        </div>
    </div>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 custom-card">
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">
                            <a asp-controller="Order" asp-action="Index" asp-route-customerId="@item.Id" asp-route-customername="@item.Name"
                               class="btn btn-success">@item.Name</a>
                        </h5>
                        <p class="card-text">@item.Phone</p>
                       <div  class="d-flex justify-content-between">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">تعديل</a>
                        <a asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger">حذف عميل</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<script>
    document.getElementById("searchInput").addEventListener("input", function () {
        var searchValue = this.value.trim().toLowerCase();
        var cards = document.querySelectorAll(".custom-card");

        cards.forEach(function (card) {
            var cardName = card.querySelector(".card-title .btn").textContent.toLowerCase();
            if (cardName.includes(searchValue)) {
                card.style.display = "block";
            } else {
                card.style.display = "none";
            }
        });
    });
    
        document.getElementById("showResultBtn").addEventListener("click", function () {
            var resultContainer = document.getElementById("result");
            if (resultContainer.style.display === "none") {
                resultContainer.style.display = "block";
            } else {
                resultContainer.style.display = "none";
            }
        });
     
</script>

@model IEnumerable<Elhoot_HomeDevices.Data.Customer>

@{
    ViewData["Title"] = "العملا";
}

<h1>صفحه العملا</h1>
<h1>الاقساط كلها =  @ViewBag.result</h1>
<p>
    <a asp-action="Create" class="btn btn-primary">إضافة عميل جديد</a>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr class="table-primary">
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                @*<th>
                @Html.DisplayNameFor(model => model.Email)
                </th>*@
                @*<th>
                @Html.DisplayNameFor(model => model.Address)
                </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.Phone)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        <tbody>
                @foreach (var item in Model)
                {
                <tr class="table-danger">
                    <td>
                        <a asp-controller="Order" asp-action="Index" asp-route-customerId="@item.Id" asp-route-customername="@item.Name" style="text-decoration: none; font-weight: bold; background-color: forestgreen; color: white; padding: 8px 16px; border-radius: 4px;">@item.Name</a>

                    </td>

                        @*<td>
                @Html.DisplayFor(modelItem => item.Address)
                </td>*@
                    <td>
                            @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">تعديل</a>
                            @*   <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>*@
                        <a asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-sm btn-danger"> حذف عميل</a>


                    </td>
                </tr>
                }
        </tbody>
        </tbody>
    </table>
</div>
@model Elhoot_HomeDevices.Data.Product

@{
    ViewData["Title"] = "Edit";

    SelectList selectListItems = new SelectList(ViewBag.Catogeryname, "Id", "Name");
}


<hr />
<div class="container">
    <div class="text-center mt-4">

        <h1>تعديل المنتج</h1>

    </div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <h5 class="card-title">الاسم</h5>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h5 class="card-title">العدد</h5>
                <input asp-for="Count" class="form-control" />
                <span asp-validation-for="Count" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h5 class="card-title">السعر</h5>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div>
                @* Add a hidden field to retain the CategoryId *@
                <input type="hidden" asp-for="CategoryId" />
            </div>
           
            <div class="form-group">
                <br />
                <input type="submit" value="حفظ" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-categoryId="@Model.CategoryId" asp-route-CatName="@Model.Category.Name">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

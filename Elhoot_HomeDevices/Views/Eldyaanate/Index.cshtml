@model Elhoot_HomeDevices.ViewModels.EldyanaatViewmodel
<br />
<br />
<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <button id="showResultBtn" class="btn btn-primary">اضغط هنا لمعرفه الرقم الكلى</button>
        <a asp-action="Create" class="btn btn-success">إضافة جديد</a>
    </div>
    <div id="result" style="display: none;">
        <h1>اللى ليا: @Model.TotalMoney</h1>
    </div>
</div>

<div class="container mt-3">
    <div class="row mb-3">
        <div class="col-md-6">
            <input id="searchInput" type="text" class="form-control" placeholder="ابحث عن عميل..." />
        </div>
    </div>
    <div class="row">
        @foreach (var item in Model.Deeens)
        {
            <div class="col-md-4">
                <div class="card mb-3">
                    <div class="card-header  bg-info">
                        <h3 style="color:black" >@Html.DisplayFor(modelItem => item.Name)</h3>

                    </div>
                    <div class="card-body bg-warning">
                         <p class="card-text"><strong style="color:black;">المبلغ:</strong> @Html.DisplayFor(modelItem => item.Money)</p>
                        <p class="card-text"><strong style="color: black;">بداية التاريخ:</strong> @Html.DisplayFor(modelItem => item.date)</p>
                        <p class="card-text"><strong style="color: black;">الفائدة:</strong> @Html.DisplayFor(modelItem => item.Pienfits)</p>
                         <p class="card-text"><strong style="color: black;">عدد الشهور:</strong> @Html.DisplayFor(modelItem => item.CountMonth)</p>
                        <div class="d-flex justify-content-between">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">تعديل</a>
                            <a asp-action="Details" asp-route-id="@item.Id" asp-route-name="@item.Name" class="btn btn-sm btn-info">دخول</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">حذف</a>

                        </div>
                     </div>

                  

                </div>
            </div>
        }
    </div>
</div>

<script>
    document.getElementById("showResultBtn").addEventListener("click", function () {
        var resultContainer = document.getElementById("result");
        if (resultContainer.style.display === "none") {
            resultContainer.style.display = "block";
        } else {
            resultContainer.style.display = "none";
        }
    });

    document.getElementById("searchInput").addEventListener("input", function () {
        var searchValue = this.value.trim().toLowerCase();
        var cards = document.querySelectorAll(".card");

        cards.forEach(function (card) {
            var cardName = card.querySelector(".card-header h3").textContent.toLowerCase(); // Corrected selector
            if (cardName.includes(searchValue)) {
                card.style.display = "block";
            } else {
                card.style.display = "none";
            }
        });
    });

</script>

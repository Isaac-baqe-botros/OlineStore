@model Elhoot_HomeDevices.ViewModels.MadunaateViewModel

<h2>الناس اللى  مديناااانى</h2>
<h1>كل الدين اللى عليا: @Model.TotalMoney</h1>
<p>
    <a asp-action="Create" class="btn btn-primary">اضافه داين جديد</a>
</p>
<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>العميل</th>
                <th>المبلغ</th>
                <th>التاريخ</th>
                <th>الفايده</th>
                <th>عدد الشهور</th>
                <th>العمليات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Madunaates)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Money)</td>
                    <td>@Html.DisplayFor(modelItem => item.date)</td>
                    <td>@Html.DisplayFor(modelItem => item.Pienfits)</td>
                    <td>@Html.DisplayFor(modelItem => item.CountMonth)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">تعديل</a>
                        <a asp-action="Details" asp-route-id="@item.Id" asp-route-name="@item.Name" class="btn btn-secondary">دخول</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">حذف</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

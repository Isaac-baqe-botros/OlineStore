@model Elhoot_HomeDevices.ViewModels.MadunaateViewModel

<h2>Madunaates List</h2>
<p>كل الدين اللى عليا: @Model.TotalMoney</p>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>العميل</th>
            <th>المبلغ</th>
            <th>بدايه التاريخ</th>
            <th>الفايده</th>
            <th> عدد الشهور </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Madunaates) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Money)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pienfits)
            </td>
                <td>@Html.DisplayFor(modelItem => item.CountMonth)</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" asp-route-name="@item.Name">دخول</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" >Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
